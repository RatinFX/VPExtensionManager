<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--Base Styles-->
    <Style x:Key="BaseButton" TargetType="{x:Type Button}" BasedOn="{StaticResource MahApps.Styles.Button}">
        <Setter Property="Margin" Value="{StaticResource SmallRightMargin}" />
        <Setter Property="Padding" Value="12,6,12,6" />
    </Style>

    <Style x:Key="OpenFolderButton" TargetType="{x:Type Button}" BasedOn="{StaticResource BaseButton}">
        <Setter Property="Content" Value="Open" />
    </Style>

</ResourceDictionary>
