<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--Base Styles-->
    <Style x:Key="BaseButton" TargetType="{x:Type Button}" BasedOn="{StaticResource MahApps.Styles.Button}">
        <Setter Property="Padding" Value="12,6,12,6" />
        <Setter Property="FontSize" Value="12" />
    </Style>

    <Style x:Key="BaseIconButton" TargetType="{x:Type Button}" BasedOn="{StaticResource MahApps.Styles.Button}">
        <Setter Property="FontFamily" Value="Segoe MDL2 Assets" />
        <Setter Property="Padding" Value="12,6,12,6" />
        <Setter Property="FontSize" Value="12" />
    </Style>

    <!--Custom Styles-->

</ResourceDictionary>
